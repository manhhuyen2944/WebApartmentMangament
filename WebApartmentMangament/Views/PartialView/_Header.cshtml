@{
    var AvartarClaim = User.Claims.FirstOrDefault(c => c.Type == "Avartar");
    var Avartar = "";
    if (AvartarClaim != null)
    { Avartar = AvartarClaim.Value; }
}


<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- Spinner End -->
<!-- Navbar Start -->
<div class="container-fluid nav-bar bg-transparent">
    <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand d-flex align-items-center text-center">
            <div class="icon p-2 me-2">
                <img class="img-fluid" src="~/users/img/icon-deal.png" alt="Icon" style="width: 30px; height: 30px;">
            </div>
            <h1 class="m-0 text-primary">Centana</h1>
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto">
                <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active" style="font-family: Arial, sans-serif;font-weight: bold;">Trang chủ</a>
                <a asp-action="GioiThieu" asp-controller="Home" class="nav-item nav-link" style="font-family: Arial, sans-serif;font-weight: bold;">Giới thiệu</a>
                <a asp-action="TinTuc" asp-controller="Home" class="nav-item nav-link" style="font-family: Arial, sans-serif;font-weight: bold;">Tin tức</a>
                <a asp-action="LienHe" asp-controller="Home" class="nav-item nav-link" style="font-family: Arial, sans-serif;font-weight: bold;">Liên hệ</a>
            </div>
            @if (User.Identity.IsAuthenticated)
            {

                <div class="nav-item dropdown">

                    <a href="#" style="" class="nav-link dropdown" data-bs-toggle="dropdown"><img src="@Avartar" alt="Ảnh đại diện" style="width:40px;height:40px;border-radius:100%;margin-right:5px ;">@User.Identity?.Name</a>


                    <div class="dropdown-menu rounded-0 m-0">
                        <a class="dropdown-item" asp-action="Profile" asp-controller="Account">
                            <i class="mdi mdi-cached me-2 text-success"></i> Trang cá nhân
                        </a><div class="dropdown-divider">
                        </div>
                        <a class="dropdown-item" asp-action="CanHo" asp-controller="Account">
                            <i class="mdi mdi-logout me-2 text-primary"></i> Căn Hộ của tôi
                        </a>
                        <div class="dropdown-divider">
                        </div>
                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">
                            <i class="mdi mdi-logout me-2 text-primary"></i> Đăng xuất
                        </a>
                    </div>
                </div>

            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-3 d-none d-lg-flex" style="margin-right:10px;">Đăng nhập</a>

            }

        </div>
    </nav>
</div>
<!-- Navbar End -->
<!-- Header Start -->
<div class="container-fluid header bg-white p-0">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
            <h1 class="display-5 animated fadeIn mb-4">Tìm một <span class="text-primary">Ngôi nhà hoàn hảo</span> để sống cùng gia đình bạn</h1>

            <a href="" class="btn btn-primary py-3 px-5 me-3 animated fadeIn">Bắt đầu</a>
        </div>
        <div class="col-md-6 animated fadeIn">
            <div class="owl-carousel header-carousel">
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/users/img/carousel-1.jpg" alt="">
                </div>
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/users/img/carousel-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

