@model Account
@{
    ViewData["Title"] = "Edit";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SỬA THÔNG TIN CƯ DÂN</h4>
            <p class="card-description"> Nhập thông tin  </p>
            <form class="forms-sample" asp-action="EditQL" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="AccountId" />
                <div class="form-group">
                    <label>Mã quản lý</label>
                    <input class="form-control" asp-for="Code" placeholder="Mã quản lý" required readonly>
                </div>
                <div class="form-group  flex-grow-1 mx-4">
                    <img src="@Url.Content("~/contents/Images/Admin/" + @Model.Avartar)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output">
                    <label asp-for="Avartar" class="control-label"></label>
                    <input type="file" name="fAvatar" asp-for="Avartar" class="form-control-file" onchange="loadFile(event)" />
                    <span asp-validation-for="Avartar" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label>Tài khoản</label>
                    <input class="form-control" asp-for="UserName" placeholder="Tài khoản" required>
                </div> 
                <div class="form-group">
                    <label>Họ Tên</label>
                    <input class="form-control" asp-for="Info.FullName" placeholder="Họ Tên" required>
                </div>
                <div class="form-group">
                    <label>Ngày Sinh</label>
                    <input class="form-control" asp-for="Info.BirthDay" placeholder="Ngày Sinh" required>
                </div>
                <div class="form-group">
                    <label>Trạng Thái</label>
                    <select class="form-control" asp-for="Status" placeholder="" required>
                        <option value="1" selected>Hoạt động</option>
                        <option value="2">Ngừng hoạt động</option>

                    </select>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
                <button asp-action="Manage" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var loadFile = function (event) {
            var image = document.getElementById("output");
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}
