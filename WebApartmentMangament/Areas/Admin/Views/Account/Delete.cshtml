@model Account

<h1>XÓA CƯ DÂN</h1>
<h3>Bạn có chắc là muốn xóa không?</h3>

<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Mã cư dân
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info.FullName)
        </dd>
        <dt class="col-sm-2">

            Tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Quan hệ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relationship.RelationshipName)
        </dd>
        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }
    </dl>
    <br />
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="AccountId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
