@model Account
@{
    ViewData["Title"] = "Create";
    var ApartmentId = ViewBag.ApartmentId;
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">THÊM CƯ DÂN</h4>
            <p class="card-description"> Nhập thông tin  </p>
            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ApartmentId" class="form-label">Căn hộ <span></span></label>
                    <select asp-for="ApartmentId" asp-items="ApartmentId" class="form-select">
                        <option value="">-- Chọn căn hộ --</option>
                    </select>
                </div>
                <div class="form-group  flex-grow-1 mx-4">
                    <div id="image-preview">
                        <img id="preview" src="#" alt="" style="width: 200px; height: 200px; border-radius: 20px; display: none;">
                        <br />
                        <label asp-for="Avartar" class="control-label"></label>
                        <input type="file" name="fAvatar" asp-for="Avartar" class="form-control-file" onchange="previewImage(this)" />
                    </div>
                    <span asp-validation-for="Avartar" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label>Họ Tên</label>
                    <input class="form-control" asp-for="Info.FullName" placeholder="Họ Tên" required>
                </div>
                <div class="form-group">
                    <label>Ngày Sinh</label>
                    <input class="form-control" asp-for="Info.BirthDay" placeholder="Ngày Sinh" required>
                </div>
                <div class="form-group">
                    <label>Trạng Thái </label>
                    <select class="form-control" asp-for="Status" placeholder="" required>
                        <option value="1" selected>Hoạt động</option>
                        <option value="2">Ngừng hoạt động</option>
                
                    </select>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">Thêm Mới</button>
                <button asp-action="Index" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function previewImage(input) {
            var preview = document.getElementById('preview');
            var imagePreview = document.getElementById('image-preview');
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    preview.setAttribute('src', e.target.result);
                    preview.style.display = 'block';
                    imagePreview.style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}