@model Service

<h1>XEM CHI TIẾT</h1>

<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên dịch vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">

           Mô tả 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">

           Phí dịch vụ / tháng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceFee)
        </dd>


        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>


        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }
    </dl>
    <br />

</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ServiceId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>