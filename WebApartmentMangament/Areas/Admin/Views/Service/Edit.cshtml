@model Service
@{
    ViewData["Title"] = "Edit";
   
    if (Model.Status == 1)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '1';
        </script>
    }
    else if (Model.Status == 2)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '2';
        </script>
    }
    else if (Model.Status == 3)
    {
        <script>
            document.querySelector('select[name="Status"]').value = '3';
        </script>
    }
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SỬA THÔNG TIN DỊCH VỤ</h4>
            <p class="card-description"> Nhập thông tin  </p>
            <form class="forms-sample" asp-action="Edit" method="post">
                <input type="hidden" asp-for="ServiceId" />
                <div class="form-group">
                    <label>Tên dịch vụ</label>
                    <input class="form-control" asp-for="ServiceName" placeholder="Tên dịch vụ" required readonly>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <input class="form-control" asp-for="Description" placeholder="Mô tả" required>
                </div>
                <div class="form-group">
                    <label>Phí dịch vụ / Tháng</label>
                    <input class="form-control" asp-for="ServiceFee" placeholder="Phí dịch vụ / Tháng" required>
                </div>
               
                <div class="form-group">
                    <label>Trạng Thái dịch vụ</label>
                    <select class="form-control" asp-for="Status" placeholder="" required>
                        <option value="1" selected>Hoạt động</option>
                        <option value="2">Ngừng hoạt động</option>
                        <option value="3">Bảo trì</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
                <button asp-action="Index" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

