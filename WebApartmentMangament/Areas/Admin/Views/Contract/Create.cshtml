@model Contract
@{
    ViewData["Title"] = "Create";
    var ApartmentId = ViewBag.ApartmentId;
    var AccountId = ViewBag.AccountId;
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">THÊM ĐỒNG HỢP ĐỒNG</h4>
            <p class="card-description"> Nhập thông tin  </p>
            <form class="forms-sample" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="ApartmentId" class="form-label">Căn hộ <span></span></label>
                    <select asp-for="ApartmentId" asp-items="ApartmentId" class="form-select">
                        <option value="">-- Chọn căn hộ --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AccountId" class="form-label">Cư dân <span></span></label>
                    <select asp-for="AccountId" asp-items="AccountId" class="form-select">
                        <option value="">-- Chọn cư dân --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Ngày ký hợp đồng</label>
                    <input class="form-control" asp-for="StartDay" placeholder="Ngày ký hợp đồng" required>
                </div>
                <div class="form-group">
                    <label>Ngày hết hạn hợp đồng</label>
                    <input class="form-control" asp-for="EndDay" placeholder="Ngày hết hạn hợp đồng" required>
                </div>
                <div class="form-group">
                    <label>Tiền thuê/ Tháng</label>
                    <input class="form-control" asp-for="MonthlyRent" placeholder="Tiền thuê/ Tháng" required>
                </div>
                <div class="form-group">
                    <label>Tiền cọc</label>
                    <input class="form-control" asp-for="Deposit" placeholder="Tiền cọc" required>
                </div>
                <div class="form-group">
                    <label>Trạng Thái Căn Hộ</label>
                    <select class="form-control" asp-for="Status" placeholder="" required>
                        <option value="1" selected>Hoạt động</option>
                        <option value="2">Ngừng hoạt động</option>
                        <option value="3">Bảo trì</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">Thêm Mới</button>
                <button asp-action="Index" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

