@model Contract

<h1>XEM CHI TIẾT</h1>

<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Chủ hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Info.FullName)
        </dd>
        <dt class="col-sm-2">

            Ngày bắt đầu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDay)
        </dd>
        <dt class="col-sm-2">
            Ngày kết thúc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDay)
        </dd>
        <dt class="col-sm-2">
            Tiền thuê / tháng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MonthlyRent)
        </dd>
        <dt class="col-sm-2">
            Tiền cọc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deposit)
        </dd>

        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }
    </dl>
    <br />

</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ContractId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>