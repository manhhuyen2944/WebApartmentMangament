@model Building

<h1>XÓA TÒA NHÀ</h1>
<h3>Bạn có chắc là muốn xóa không?</h3>
<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            MÃ TÒA NHÀ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildingCode)
        </dd>
        <dt class="col-sm-2">

            TÊN TÒA NHÀ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildingName)
        </dd>
        <dt class="col-sm-2">

            ĐỊA CHỈ TÒA NHÀ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">

            THÀNH PHỐ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">

            ZIP
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt class="col-sm-2">

           SỐ CĂN HỘ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentNumber)
        </dd>
        <dt class="col-sm-2">

            SỐ CƯ DÂN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccNumber)
        </dd>
        <dt class="col-sm-2">

           TRẠNG THÁI TÒA NHÀ 
        </dt>
       
            @if (Model.Status == 1)
            {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
            }@if (Model.Status == 2)
            { <dd class="col-sm-10">
                Ngừng Hoạt động
            </dd>
            }@if (Model.Status == 3)
            { <dd class="col-sm-10">
                Đang bảo trì
            </dd>
            }

        


    </dl>
    <br />
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="BuildingId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
