@model ElectricMeter

<h1>XÓA ĐỒNG HỒ</h1>
<h3>Bạn có chắc là muốn xóa không?</h3>
<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Mã đồng hồ 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">

           Ngày đăng ký 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class="col-sm-2">
            Chỉ số đầu 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOne)
        </dd>
        <dt class="col-sm-2">

           Chỉ số cuối 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberEnd)
        </dd>
      
        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Đã bàn giao
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Còn trống
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }
    </dl>
    <br />
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="ElectricMeterId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
