@model ApartmentService
@{
    ViewData["Title"] = "Edit";
    var ApartmentId = ViewBag.ApartmentId;
    var ServiceId = ViewBag.ServiceId;
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SỬA DỊCH VỤ CĂN HỘ</h4>
            <p class="card-description"> Nhập thông tin căn hộ </p>
            <form class="forms-sample" asp-action="Edit" method="post">
                <input type="hidden" asp-for="ApartmentId" />
                <input type="hidden" asp-for="ServiceId" />
                <div class="form-group">
                    <label asp-for="ApartmentId" class="form-label">Căn hộ <span></span></label>
                    <select asp-for="ApartmentId" asp-items="ApartmentId" class="form-select" required disabled >
                        <option value="">-- Chọn căn hộ --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId" class="form-label">Dịch vụ  <span></span></label>
                    <select asp-for="ServiceId" asp-items="ServiceId" class="form-select" required disabled>
                        <option value="">-- Chọn dịch vụ  --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ngày bắt đầy </label>
                    <input class="form-control" asp-for="StartDay" placeholder=" Ngày bắt đầy " required>
                </div>
                <div class="form-group">
                    <label>Ngày kết thúc</label>
                    <input class="form-control" asp-for="EndDay" placeholder="Ngày kết thúc" required>
                </div>
                <div class="form-group">
                    <label>Trạng Thái Căn Hộ</label>
                    <select class="form-control" asp-for="Status" placeholder="" required>
                        <option value="1" selected>Hoạt động</option>
                        <option value="2">Ngừng hoạt động</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
                <button asp-action="Index" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

