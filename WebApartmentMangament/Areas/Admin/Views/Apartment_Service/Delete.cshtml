@model ApartmentService

<h1>XÓA DỊCH VỤ</h1>
<h3>Bạn có chắc là muốn xóa không?</h3>
<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-5">

            Tên căn hộ
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Apartment.ApartmentCode)
        </dd>
        <dt class="col-sm-5">

            Dịch vụ
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class="col-sm-5">

            Ngày bắt đầu 
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.StartDay)
        </dd>
        <dt class="col-sm-5">
            Ngày kết thúc
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.EndDay)
        </dd>
        <dt class="col-sm-5">

            TRẠNG THÁI DỊCH VỤ
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-5">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-5">
                Ngừng hoạt động
            </dd>
        }

    </dl>
    <br />
    <form asp-action="Delete" asp-route-id="@Model.ApartmentId" asp-route-di="@Model.ServiceId">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-route-id="@Model.ApartmentId" asp-route-di="@Model.ServiceId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
