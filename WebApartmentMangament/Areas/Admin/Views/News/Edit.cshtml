@model News
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thêm Tòa nhà mới</h4>
            <p class="card-description"> Nhập thông tin tòa nhà </p>
            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputUsername1">Tiêu đề</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Tiêu đề" required>
                </div>
                <div class="form-group  flex-grow-1 mx-4">
                    <img src="@Url.Content("~/contents/Images/News/" + @Model.Image)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" name="fAvatar" asp-for="Image" class="form-control-file" onchange="loadFile(event)" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="custom-control-label col-md-2" asp-for="Description" class="control-label" for="htmlelementid">Nội Dung</label>
                    <textarea name="Description" id="htmlelementid" style="max-width:auto" class="form-control" asp-for="Description"></textarea>

                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
                <button asp-action="Index" class="btn btn-light">Trở về</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var loadFile = function (event) {
            var image = document.getElementById("output");
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}
