@model IEnumerable<News>


<style>
    .body {
        font-family: Arial, sans-serif;
    }
</style>


<div class="page-header">
    <h3 class="page-title"> DANH SÁCH TIN TỨC </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Tables</a></li>
            <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
        </ol>
    </nav>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH TIN TỨC </h4>
            <a asp-action="Create" class="btn btn-success mb-2">Thêm</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> TIÊU ĐỀ  </th>
                        <th> ẢNH  </th>
                        <th> MÔ TẢ  </th>
                        <th> NGÀY TẠO </th>
                        <th> Trạng thái  </th>
                        <th> Thao tác  </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                @item.Title
                            </td>
                            <td>
                                <img src="@Url.Content("~/contents/Images/News/" + item.Image)" style="width: 200px; height: 200px; border-radius: 20px;" alt="" id="output">
                              
                                
                            </td>
                            <td>
                                
                            </td>
                            <td> @item.CreateDay </td>
                            @if (item.Status == 1)
                            {
                                <td> Hoạt động </td>
                            }@if (item.Status == 2)
                            {
                                <td>Ngừng Hoạt động </td>
                            }@if (item.Status == 3)
                            {
                                <td> Đang bảo trì </td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@item.NewsId" class="action-icon"> <i class="mdi mdi-eye" style="color:#19b6ff;font-size:25px;"></i>  </a>
                                <a asp-action="Edit" asp-route-id="@item.NewsId" class="action-icon"> <i class="mdi mdi-square-edit-outline" style="color:#ffd83b;font-size:25px;"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.NewsId" class="action-icon"> <i class="mdi mdi-delete" style="color:#e75555;font-size:25px;"></i></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>