@model WaterMeter

<h1>XEM CHI TIẾT</h1>

<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Mã đồng hồ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">

            Ngày đăng ký
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class="col-sm-2">
            Chỉ số đầu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOne)
        </dd>
        <dt class="col-sm-2">
            Chỉ số cuối
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberEnd)
        </dd>

        <dt class="col-sm-2">

            TRẠNG THÁI
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Hoạt động
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }
    </dl>
    <br />

</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.WaterMeterId">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>