@model Apartment

<h1>XÓA CĂN HỘ</h1>
<h3>Bạn có chắc là muốn xóa không?</h3>
<div>

    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">

            Tên căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentName)
        </dd>
        <dt class="col-sm-2">

            Mã căn hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentCode)
        </dd>
        <dt class="col-sm-2">

            Tầng Số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FloorNumber)
        </dd>
        <dt class="col-sm-2">
            Căn Hộ Số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApartmentNumber)
        </dd>
        <dt class="col-sm-2">

            Ngày Bàn Giao
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDay)
        </dd>
        <dt class="col-sm-2">

            Diện Tích 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)M2
        </dd>
        <dt class="col-sm-2">

            TRẠNG THÁI TÒA NHÀ
        </dt>

        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Đã bàn giao
            </dd>
        }@if (Model.Status == 2)
        {
            <dd class="col-sm-10">
                Còn trống
            </dd>
        }@if (Model.Status == 3)
        {
            <dd class="col-sm-10">
                Bảo trì
            </dd>
        }




    </dl>
    <br />
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="ApartmentId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </form>
</div>
